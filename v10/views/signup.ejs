<%- include ('partials/header') %>

<div class="container">
    
    <div class="row">
        
        <h1 style="text-align: center;">Sign Up</h1>

        <div style="width: 30%; margin: 0 auto;">
            
            <form action="/signup" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Enter a name">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Enter a password">
                </div>
                
                <div class="form-group">
                    <button class="form-control btn-warning">Sign Up</button>
                </div>
                
            </form>
            
            <p>
                <a href="/">Landing page</a>
            </p>
            
        </div>
        
    </div>
    
</div>

<%- include ('partials/footer') %>