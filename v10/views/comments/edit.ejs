<%- include ('../partials/header') %>

<div class="container">
    
    <div class="row">
        
        <h1 style="text-align: center;">Update a Comment</h1>

        <div style="width: 30%; margin: 0 auto;">
            
            <form action="/campgrounds/<%= campgroundId %>/comment/<%= comment._id %>?_method=PUT" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                
                <div class="form-group">
                    <button class="form-control btn-warning">SAVE</button>
                </div>
                
            </form>
            
            <p>
                <a href="/campgrounds/<%= campgroundId %>">Back</a>
            </p>
            
            <p>
                <a href="/">Landing page</a>
            </p>
            
        </div>
        
    </div>
    
</div>

<%- include ('../partials/footer') %>