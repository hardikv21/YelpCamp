<%- include ('../partials/header') %>

<div class="container">
    
    <div class="row">
        
        <h1 style="text-align: center;">Add a New Comment in <%= campground.name %></h1>

        <div style="width: 30%; margin: 0 auto;">
            
            <form action="/campgrounds/<%= campground._id %>/comment" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Enter a text" required>
                </div>
                
                <div class="form-group">
                    <button class="form-control btn-warning">SAVE</button>
                </div>
                
            </form>
            
            <p>
                <a href="/campgrounds/<%= campground._id %>">Back</a>
            </p>
            
            <p>
                <a href="/">Landing page</a>
            </p>
            
        </div>
        
    </div>
    
</div>

<%- include ('../partials/footer') %>