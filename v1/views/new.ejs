<%- include ('partials/header') %>

<div class="container">
    
    <div class="row">
        
        <h1 style="text-align: center;">Form for the new Camp Grounds</h1>

        <div style="width: 30%; margin: 0 auto;">
            
            <form action="/campgrounds" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter a camp name">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Enter a image url">
                </div>
                
                <div class="form-group">
                    <button class="form-control btn-warning">SAVE</button>
                </div>
                
            </form>
            
            <p>
                <a href="/campgrounds">Back</a>
            </p>
            
            <p>
                <a href="/">Landing page</a>
            </p>
            
        </div>
        
    </div>
    
</div>

