<%- include ('../partials/header') %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <ul class="list-group">
        <li class="list-group-item active">Item 1</li>
        <li class="list-group-item">Item 2</li>
        <li class="list-group-item">Item 3</li>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img src="<%= foundCamp.image %>">
        <div class="caption">
          <h4 class="pull-right">$100/night</h4>
          <h4><%= foundCamp.name %></h4>
          <p><%- foundCamp.description %></p><br/>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <p><a href="/campgrounds/<%= foundCamp._id %>/comment/new" class="btn btn-default" role="button">Add a Comment</a></p>
        </div>
        <hr>
        <% foundCamp.comments.forEach(function(comment)
        { %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %></strong>
              <p>
                <%= comment.text %>
              </p>  
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>  
</div>

<%- include ('../partials/footer') %>